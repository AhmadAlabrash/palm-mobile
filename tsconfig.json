{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "src",
    "paths": {
      "palm-core/*": ["./palm-core/*"],
      "palm-core/types": ["./palm-core/types"],
      "palm-core/consts": ["./palm-core/consts"],
      "palm-ui-kit/*": ["./palm-ui-kit/*"],

      "palm-react/*": ["./palm-react/*"],
      "palm-react-native/*": ["./palm-react-native/*"],
      "palm-react-native-ui-kit/*": ["./palm-react-native-ui-kit/*"]
    },
    "types": ["react-native", "jest", "styled-components-react-native"],
    "esModuleInterop": true,
    "noImplicitAny": false
  }
}
